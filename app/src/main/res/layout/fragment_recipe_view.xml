<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.finaiized.recipmon.app.RecipeViewActivity.RecipeViewFragment">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="300dp">

            <ImageView
                android:id="@+id/recipe_view_image"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:contentDescription="@string/recipe_image_description"
                android:scaleType="centerCrop"
                android:src="@drawable/pink_cupcake" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_header"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recipe_view_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:paddingLeft="10dp"
                android:paddingTop="15dp"
                android:text="@string/add_recipe_name"
                android:textColor="#FFFAFA"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/recipe_description_label"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/recipe_view_name"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="@string/add_recipe_description"
                android:textColor="#FFFAFA"
                android:textSize="16sp" />

            <View
                android:id="@+id/anchor"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignTop="@id/recipe_view_name" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_subheader"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="Serves: 5"
                android:textColor="#DCEDED" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="Prep time: 5"
                android:textColor="#DCEDED" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="Cook time: 5"
                android:textColor="#DCEDED" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/recipe_view_steps"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:orientation="vertical" />

    </LinearLayout>
</ScrollView>